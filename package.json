{
  "name": "reactive-platform",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": "24.x",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "preinstall": "node scripts/setup-node.mjs",
    "prepare": "node scripts/setup-node.mjs",
    "build": "nx run-many -t build",
    "test": "nx run-many -t test",
    "lint": "nx run-many -t lint",
    "lint:eslint": "nx run-many -t lint --all",
    "lint:styles": "stylelint '**/*.css' --allow-empty-input",
    "lint:styles:fix": "stylelint '**/*.css' --fix --allow-empty-input",
    "lint:md": "markdownlint-cli2 '**/*.md'",
    "lint:md:fix": "markdownlint-cli2 --fix '**/*.md'",
    "lint:stories": "tsx tools/lint-stories.ts --stories",
    "lint:a11y": "tsx tools/lint-stories.ts --a11y",
    "lint:ui": "tsx tools/lint-stories.ts",
    "lint:tests": "tsx tools/lint-tests.ts",
    "lint:tokens": "pnpm lint:styles && node tools/validate-tailwind-config.mjs",
    "lint:all": "pnpm lint:eslint && pnpm lint:styles && pnpm lint:ui && pnpm lint:tests && pnpm lint:md",
    "lint:fix": "nx run-many -t lint --all -- --fix && stylelint '**/*.css' --fix && markdownlint-cli2 --fix '**/*.md'",
    "check:docs-index": "bash tools/verify-docs-index.sh",
    "check:frontend": "./tools/check-frontend.sh",
    "graph": "nx graph",
    "generate:api": "./tools/openapi-codegen/generate.sh",
    "dev:backend": "cd docker && docker compose up -d product-service customer-service discount-service",
    "dev:frontend": "nx serve ecommerce-web",
    "dev": "concurrently \"pnpm dev:backend\" \"pnpm dev:frontend\"",
    "stop": "cd docker && docker compose down"
  },
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@ladle/react": "^5.1.1",
    "@nx/eslint": "^22.1.3",
    "@nx/eslint-plugin": "^22.1.3",
    "@nx/gradle": "^22.1.3",
    "@nx/jest": "22.1.3",
    "@nx/js": "^22.1.3",
    "@nx/playwright": "^22.1.3",
    "@nx/plugin": "22.1.3",
    "@nx/react": "^22.1.3",
    "@nx/vite": "^22.1.3",
    "@nx/vitest": "22.1.3",
    "@nx/web": "22.1.3",
    "@nx/workspace": "^22.1.3",
    "@openapitools/openapi-generator-cli": "^2.25.2",
    "@playwright/test": "^1.57.0",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "20.19.9",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^4.0.0",
    "@vitest/ui": "^4.0.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-reactive": "file:./tools/eslint-plugin-reactive",
    "glob": "^10.3.10",
    "jest": "^30.0.2",
    "jest-axe": "^10.0.0",
    "jest-environment-node": "^30.0.2",
    "jest-util": "^30.0.2",
    "jiti": "2.4.2",
    "jsdom": "~22.1.0",
    "jsonc-eslint-parser": "^2.1.0",
    "markdownlint-cli2": "^0.19.1",
    "msw": "^2.12.4",
    "nx": "^22.1.3",
    "postcss": "^8.5.6",
    "prettier": "^2.6.2",
    "stylelint": "^16.12.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-tailwindcss": "^0.0.7",
    "stylelint-plugin-tokens": "file:./tools/stylelint-plugin-tokens",
    "tailwindcss": "^3.4.18",
    "ts-jest": "^29.4.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.0",
    "vitest-axe": "^0.1.0",
    "yaml": "^2.8.2"
  },
  "dependencies": {
    "@nx/devkit": "22.1.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-router": "^1.139.14",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "graphql-sse": "^2.6.0",
    "lucide-react": "^0.556.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "6.29.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "web-vitals": "^5.1.0"
  },
  "msw": {
    "workerDirectory": [
      "public",
      "apps/ecommerce-web/public",
      "apps/kiosk-web/public"
    ]
  }
}