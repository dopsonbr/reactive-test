{
  "name": "reactive-platform",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "nx run-many -t build",
    "test": "nx run-many -t test",
    "lint": "nx run-many -t lint",
    "lint:md": "markdownlint-cli2 '**/*.md'",
    "lint:md:fix": "markdownlint-cli2 --fix '**/*.md'",
    "check:docs-index": "bash tools/verify-docs-index.sh",
    "graph": "nx graph",
    "generate:api": "./tools/openapi-codegen/generate.sh",
    "dev:backend": "cd docker && docker compose up -d product-service customer-service discount-service",
    "dev:frontend": "nx serve ecommerce-web",
    "dev": "concurrently \"pnpm dev:backend\" \"pnpm dev:frontend\"",
    "stop": "cd docker && docker compose down"
  },
  "devDependencies": {
    "@nx/gradle": "^22.1.3",
    "@nx/js": "^22.1.3",
    "@nx/react": "^22.1.3",
    "@nx/vite": "^22.1.3",
    "@nx/vitest": "22.1.3",
    "@nx/web": "22.1.3",
    "@nx/workspace": "^22.1.3",
    "@openapitools/openapi-generator-cli": "^2.25.2",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.3.0",
    "@types/node": "20.19.9",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^4.0.0",
    "@vitest/ui": "^4.0.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "jiti": "2.4.2",
    "jsdom": "~22.1.0",
    "markdownlint-cli2": "^0.19.1",
    "nx": "^22.1.3",
    "postcss": "^8.5.6",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.4.18",
    "tslib": "^2.3.0",
    "typescript": "^5.9.3",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.0",
    "yaml": "^2.8.2"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-router": "^1.139.14",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.556.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "6.29.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  }
}
